.side_bar
  .side_bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'top-items__icons--editbtn')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'top-items__icons--cogbtn')
  .side_bar__group-list
    - current_user.groups.each do |group|
      .group-set
        = link_to group_messages_path(group) do
          .group-set-set
            .group-set__item
              = group.name
            .group-set__message
              = group.show_last_message

            